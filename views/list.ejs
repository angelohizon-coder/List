<body class="text-center">

  <div class="cover-container d-flex w-100 h-100 p-3 mx-auto flex-column">
    <header class="masthead mb-auto">
      <h1 id="main-header">ToDo List</h1>
      <img src="images/list.svg" alt="todo list">
    </header>

    <main role="main" class="inner cover">
      <h1 class="cover-heading">Things to do in
        <% if(day === 'Saturday' || day === 'Sunday') { %>
          <span style="color: Turquoise"><%= day %></span>
        <% } else { %>
          <span style="color: Red"><%= day %></span>
        <% } %>
      </h1>
      <ul>
        <% for(var i = 0; i < list.length; i++) { %>
        <li><%= list[i] %></li>
        <% } %>
      </ul>
      <form class="" action="/" method="post">
        <input class="form-control form-control-lg" type="text" name="entry" placeholder="Add new event">
        <input class="btn btn-primary btn-dark btn-lg" type="submit" value="Submit">
      </form>
    </main>

    <footer class="mastfoot mt-auto">
      <div class="inner">
        <p>Cover template for <a href="https://getbootstrap.com/">Bootstrap</a>, by Angelo Hizon</a>.</p>
      </div>
    </footer>
  </div>

